<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathOperations.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Enter data"
                >
                
            </Label>
            <Entry
                Text="{Binding num}"
                WidthRequest="100"
                >
            </Entry>
            <Button
                Command="{Binding EnterCommand}"
                >
                
            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
