<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels ="clr-namespace:CaptureFace.ViewModels"
             x:Class="CaptureFace.Views.ManHinhChoView"
             x:DataType ="viewmodels:ManHinhChoViewModel"
             Title="ManHinhChoView">
    <VerticalStackLayout>
        <VerticalStackLayout >
            <Label 
                Margin="10"
                Text="TAKE PICTURE HERE"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button
                Text="CAMERA"
                TextColor="White"
                BackgroundColor="Green"
                WidthRequest="100"
                Command="{Binding StartCameraCommand}"
                />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>